<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= noteToEdit.preview %> </title>

    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <header class="header">
        <div class="topbar-container">
            <div class="top-title">
                <a href="/project/<%= projectName %>"> < </a>
                <p>Img </p>
            </div>
            <div class="top-share">
                <img src="/img/ic_baseline-share.png" class="share">
            </div>
        </div>
    </header>

    <section class="img-container">
        <form action="/update-note/<%= projectName %>/<%= noteToEdit.id %>" method="post">
            <div class="top-image">
                <input type="hidden" name="projectName" value="<%= projectName %>">
                <input type="hidden" name="noteId" value="<%= noteToEdit.id %>">
            </div>

            <div class="paper-container">
                <!-- <div class="container">
                    <p>Image Path: /<%= imagePath %> </p>
                    <img class="image-output" src="/<%= imagePath %>" alt="Edited Image">
                </div> -->
                <textarea class="textarea" name="updatedContent" rows="4" cols="50" class=""><%= noteToEdit.text %></textarea>
            </div>

        <div class="container-save">
                <button class="add" type="submit">
                    <img src="/img/save.png">
                </button>
            </div>
            <!-- <button type="submit">Save</button> -->
        </form>

    </section>

</body>

</html>